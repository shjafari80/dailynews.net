@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model DailyNews.Models.News

<h1 class="mb-4">ایجاد خبر جدید</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">عنوان</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">محتوا</label>
        <textarea asp-for="Content" class="form-control" rows="8"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PublishDate" class="form-label">تاریخ انتشار</label>
        <input asp-for="PublishDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="PublishDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">دسته‌بندی</label>
        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AuthorId" class="form-label">نویسنده</label>
        <select asp-for="AuthorId" class="form-select" asp-items="ViewBag.AuthorId"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">تصویر خبر (اختیاری)</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">ذخیره</button>
    <a asp-action="Index" class="btn btn-secondary">انصراف</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}