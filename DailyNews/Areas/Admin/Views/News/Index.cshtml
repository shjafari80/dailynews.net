@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<DailyNews.Models.News>

<h1 class="mb-4">مدیریت اخبار</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">ایجاد خبر جدید</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>عنوان</th>
            <th>دسته‌بندی</th>
            <th>نویسنده</th>
            <th>تاریخ انتشار</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@(item.Category?.Name ?? "نامشخص")</td>
                <td>@(item.Author?.Name ?? "نامشخص")</td>
                <td>@item.PublishDate.ToString("dd MMMM yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">ویرایش</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">جزئیات</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p class="text-muted text-center mt-4">هیچ خبری ثبت نشده است.</p>
}